@using Treats.Models;

<h1>Sweets</h1>

@if (@Model.Count == 0)
{
  <h3>No Sweets have been added yet!</h3>
} 

<ul>
  @foreach(Sweet sweet in Model)
  {
    <li>@Html.ActionLink($"{sweet.SweetName}", "Details", new { id = sweet.SweetId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Sweet", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>